   FILEACC: PROCEDURE OPTIONS(MAIN);
   
   DCL RECRD CHARACTER(80);
   
   DCL INFILE  FILE RECORD INPUT  ENV(FB RECSIZE(80) BUFFERS(20) TOTAL);
   DCL OUTFILE  FILE RECORD OUTPUT ENV(FB RECSIZE(80) BUFFERS(15) TOTAL);
   
   OPEN FILE(INFILE);
   OPEN FILE(OUTFILE);
   
   READ FILE (INFILE) INTO (RECRD);
   
   /* only statements inside branches should be identified */
   if (n > 0) then
   	WRITE FILE (OUTFILE) FROM (RECRD);
   
   CLOSE FILE (INFILE);
   CLOSE FILE (OUTFILE);
   
   END FILEACC;