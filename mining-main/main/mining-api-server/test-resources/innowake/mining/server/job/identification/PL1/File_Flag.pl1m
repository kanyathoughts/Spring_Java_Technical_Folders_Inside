  FileAccess: PROCEDURE OPTIONS(MAIN);
    DECLARE #DYNA CHAR(100);
    DECLARE #WSEOF CHAR(1) INIT('N');
    DCL INFILE  FILE RECORD INPUT  ENV(FB RECSIZE(80) BUFFERS(20) TOTAL);
    DCL WORK  FILE RECORD INPUT  ENV(FB RECSIZE(80) BUFFERS(20) TOTAL);
    
    OPEN FILE(INFILE);
    OPEN FILE(WORK);
    
    READ FILE(INFILE) INTO (#DYNA);
    
    IF EOF(WORK) THEN
        #WSEOF='Y';
        
    DO WHILE (CONDITION);
        WRITE FILE(WORK) FROM (#DYNA);
        READ FILE(INFILE) INTO (#DYNA);
    END;
    CLOSE FILE(INFILE);
    CLOSE FILE(WORK);
  END FileAcces;