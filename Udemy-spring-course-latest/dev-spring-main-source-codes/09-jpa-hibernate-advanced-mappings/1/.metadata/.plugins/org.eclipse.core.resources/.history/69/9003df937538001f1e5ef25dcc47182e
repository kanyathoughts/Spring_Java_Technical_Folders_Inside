package entity;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

public class ComparatorExample {

	public static void main(String[] args) {
		
		Comparator<Integer> com = new Comparator<Integer>() {
			
			@Override
			public int compare(Integer o1, Integer o2) {
				if (o1 % 10 > o2 % 10) {
					return 1; // 1 means swap, here we want in ascending order so if first value is greater than 2nd value 
					//then we need to swap to get smaller value in starting position
				} else {
					return -1; // -1 means don't swap
				}
			}
		};
		
		List<Integer> nums = new ArrayList<Integer>();
		nums.add(34);
		nums.add(45);
		nums.add(72);
		nums.add(29);
		
		System.out.println(nums);
		
		
		System.out.println("Sort by thier last digits");
		Collections.sort(nums, com);
		System.out.println(nums);
		
		
		List<String> names = new ArrayList<String>();
		names.add("Jashwitha");
		names.add("Akhil");
		names.add("Kanyakumari");
		names.add("Thattu");
		
		System.out.println(names);
		System.out.println("===================General sorting====================");
		Collections.sort(names);
		System.out.println(names);
		
		Comparator<String> com2 = new Comparator<String>() {
			
			@Override
			public int compare(String o1, String o2) {
				if (o1.length() > o2.length()) {
					return 1;
				} else {
					return -1;
				}
			}
		};
		
		System.out.println("====================sorting using thier string lengths==========================");
		Collections.sort(names, com2);
		System.out.println(names);
	}
	
	
}
